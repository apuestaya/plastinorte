<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_only_form_view_plastinorte" model="ir.ui.view">
            <field name="name">Product Template Plastinorte</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="before">
                    <field name="override_default_code"/>
                </xpath>

                <xpath expr="//field[@name='default_code']" position="replace">
                    <field name="default_code" attrs="{ 'invisible': [('product_variant_count', '>', 1)], 
                                                'readonly': [('override_default_code', '=', True)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
